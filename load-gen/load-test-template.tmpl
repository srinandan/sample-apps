apiVersion: v1
kind: Service
metadata:
  name: load-test
  labels:
    app: load-test
spec:
  clusterIP: None
  selector:
    app: load-test
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: load-test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: load-test
  template:
    metadata:
      labels:
        app: load-test
    spec:
      containers:
      - image: fortio
        imagePullPolicy: Always
        name: load-test
        ports:
        - containerPort: 8080
        env:
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        resources:
          requests:
            cpu: 250m
        args:
        - load
        - -t
        - "0" #run forever
        - -qps
        - "1"
        - -quiet
        - https://httpbin.org/get
